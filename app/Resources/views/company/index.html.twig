{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('app_company_create') }}" class="btn btn-success" style="margin-bottom: 5px;"><i class="glyphicon glyphicon-plus"></i> Add company</a>
    <table class="table table-responsive">
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Website</th>
            <th>Description</th>
            <th></th>
        </tr>
        {% for company in companies %}
        <tr>
            <td>{{ company.name }}</td>
            <td>{{ company.year }}</td>
            <td>{{ company.website }}</td>
            <td>{{ company.description }}</td>
            <td>
                <a href="{{ path('app_company_edit', {id: company.id}) }}" class="btn btn-xs btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                <a href="{{ path('app_company_delete', {id: company.id}) }}" class="btn btn-xs btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
